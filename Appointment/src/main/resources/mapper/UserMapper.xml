<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.appointment.mapper.UserMapper">

    <!-- 用户信息结果 -->
    <resultMap id="mainMap" type="com.project.appointment.entity.User">
        <id column="id" property="id"/>
        <result column="user_name" property="username"/>
        <result column="password" property="password"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="nickname" property="nickname"/>
        <result column="openid" property="openid"/>
    </resultMap>

    <!-- 获取用户信息 -->
    <select id="findByOpenid" parameterType="java.lang.String" resultMap="mainMap">
        select * from `user` where open_id=#{openid};
    </select>


</mapper>
